<h1>Questionnaire: <%= @response.questionnaire ? @response.questionnaire.name : "No Questionaire" %></h1>

<% if @response.questionnaire %>
  <h2>Completed by: <%= @response.user %></h2>
  
  <table id="user_response" class="table table-striped" >
      <thead>
  	<tr>
  	    <th>Question</th>
  	    <th>Answer</th>
  	</tr>
      </thead>
  
      <tbody>
  
  	<% @response.answers.each do |answer| %>
  	    <%= render 'answer', answer: answer %>
  	<% end %>
  
      </tbody>
  </table>
  <%= link_to "Back", responses_path, class: "btn btn-default" %>
<% end %>
